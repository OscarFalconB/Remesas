@model RemesasApp.Models.Transaccion

<h2>Registrar nueva transacci√≥n</h2>

<form asp-action="Crear" method="post">
    <div class="form-group">
        <label asp-for="Remitente"></label>
        <input asp-for="Remitente" class="form-control" />
        <span asp-validation-for="Remitente" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Destinatario"></label>
        <input asp-for="Destinatario" class="form-control" />
        <span asp-validation-for="Destinatario" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PaisOrigen"></label>
        <input asp-for="PaisOrigen" class="form-control" />
        <span asp-validation-for="PaisOrigen" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PaisDestino"></label>
        <input asp-for="PaisDestino" class="form-control" />
        <span asp-validation-for="PaisDestino" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MontoEnviado"></label>
        <input asp-for="MontoEnviado" class="form-control" />
        <span asp-validation-for="MontoEnviado" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Moneda"></label>
        <select asp-for="Moneda" class="form-control">
            <option value="USD">USD</option>
            <option value="BTC">BTC</option>
        </select>
        <span asp-validation-for="Moneda" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TasaCambio"></label>
        <input asp-for="TasaCambio" class="form-control" />
        <span asp-validation-for="TasaCambio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MontoFinal"></label>
        <input asp-for="MontoFinal" class="form-control" />
        <span asp-validation-for="MontoFinal" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Estado"></label>
        <input asp-for="Estado" class="form-control" />
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Registrar</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
